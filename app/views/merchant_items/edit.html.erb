<%= form_with url: "/merchants/#{@merchant.id}/items/#{@item.id}/update", method: :patch, local: true do |f| %>
  <p><%= f.label :name %></p>
  <%= f.text_field :name, value:"#{@item.name}" %>
  <p><%= f.label :description %></p>
  <%= f.text_field :description, value:"#{@item.description}" %>
  <p><%= f.label :unit_price %></p>
  <%= f.text_field :unit_price, value:"#{@item.unit_price}" %>
  <%= f.submit 'Submit' %>
<% end %>
